{{! Созданным элементам сразу нужно давать понятные классы для дальнейшей удобной стилизации }}
{{#each this}}
  <li class='movie-item' data-id=''>
    <a href='#' class='movie-item__link link'>
      <div class='movie-item__img-container'>
        <img
          class='movie-item__poster js-img'
          src='https://image.tmdb.org/t/p/w500{{poster_path}}'
          {{! onerror="this.onerror=null; this.src = 'https://image.tmdb.org/t/p/w500/aTezEYoe3hKPGva8yY4M7b24F3D.jpg'" }}
          {{! onerror="this.onerror=null; this.src = './images/movies/broken-img.png'" }}
          alt='movie poster {{title}}'
          loading='lazy'
        />
      </div>
      <div class='movie-item__text-container'>
        <h3 class='movie-item__title'>{{title}}</h3>
        <p class='movie-item__description'>
          {{#each genres}}
            {{this}}{{#unless @last}},{{/unless}}
          {{/each}}
          |
          {{year}}
          <span class='movie-rating'>{{vote_average}}</span>
        </p>
      </div>
    </a>
  </li>
{{/each}}