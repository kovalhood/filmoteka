<div class='movie-card__img-wrapper'>
  {{#if poster_path}}
    <img class='movie-item__poster js-img' 
    src='https://image.tmdb.org/t/p/w500{{poster_path}}' 
    alt='{{title}}' 
    loading='lazy' />
    {{else}}
    <img class='movie-item__poster js-img'
    src='https://upload.wikimedia.org/wikipedia/commons/6/65/No-Image-Placeholder.svg'
    alt=' {{title}}'
    loading='lazy' />
    {{/if}}
</div>

<div class='movie-card-modal__info-box'>
  <h3 class='movie-card-modal__title'>{{title}}</h3>
  <div class='movie-stats'>
    <ul class='movie-stats__list list'>
      <li class='movie-stats__item'>
        Vote/Votes
        <span class='movie-stats__item--accent'>{{vote_average}} </span>
        /
        <span class='movie-stats__item--data'>{{vote_count}}</span>
      </li>

      <li class='movie-stats__item'>
        Popularity
        <span class='movie-stats__item--data'>{{popularity}}</span>
      </li>

      <li class='movie-stats__item'>
        Original Title
        <span class='movie-stats__item--data'>{{original_title}}</span>
      </li>

      <li class='movie-stats__item'>
        Genre
        <span class='movie-stats__item--data'>{{#each genres}}
            {{this.name}}{{#unless @last}},{{/unless}}
          {{/each}}</span>
      </li>
    </ul>
    
    <div class="movie-about">
      <p class='movie-about__title'>About</p>
      <p class='movie-about__info'>{{overview}}</p>
    </div>

    <div class="modal-buttons">
      <button class="button button--add-watched" type="button" data-id='{{id}}'>add to watched</button>
      <button class="button button--add-queue" type="button">add to queue</button>
    </div>
  </div>
</div>